{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "exclude": [
    "dist/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "vitest.config.*",
    "./vitest.config.*"
  ]
}